<Window x:Class="Blusutils.EEE.alAAARM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blusutils.EEE.alAAARM"
        mc:Ignorable="d"
        Title="alAAARM" Height="650" Width="470" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow">
    <Grid Margin="0,0,0,0">
        
        <TabControl>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="runBtn" Content="Run!" HorizontalAlignment="Left" Margin="207,386,0,0" VerticalAlignment="Top" Height="48" Width="104" FontSize="20" Click="runBtn_Click"/>
                    <DatePicker x:Name="runDtPicker" HorizontalAlignment="Left" Margin="60,138,0,0" VerticalAlignment="Top" SelectedDateFormat="Long" FirstDayOfWeek="Monday" IsDropDownOpen="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
